<%= form_with url: sign_in_path, local: true do |form| %>
  <h1>Sign in</h1>
  <div class="mb-3">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control", placeholder: "user@handoff.com" %>
  </div>
  <div class="mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control", placeholder: "password" %>
  </div>
  
  <div class="mb-3">
    <%= form.submit "Get started", class: "btn btn-primary", data: { turbo: false } %>
  </div>
  
  <div class="mt-3">
  Don't have an account? <%= link_to 'Sign up', sign_up_path, class: "text-primary" %>
</div>
<% end %>
