<h1>Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Billing Unit</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <!-- Link the name to the show action -->
        <td><%= link_to category.name, category_path(category) %></td>
        <td><%= category.billing_unit %></td>
        <td>
          <%= link_to 'Edit', edit_category_path(category) %>
          <%= button_to 'Delete', category, method: :delete, data: { confirm: 'Deleting this category will also delete all associated tasks. Are you sure you want to proceed?', turbo: false } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Dashboard', dashboard_path, class: 'btn btn-primary' %>
<%= link_to 'New Category', new_category_path %>
